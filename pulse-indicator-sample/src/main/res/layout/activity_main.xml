<?xml version="1.0" encoding="utf-8"?>
<com.jackpocket.pulse.layouts.PulsingLinearLayout
    android:id="@+id/main__pulse_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7ECEE"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.jackpocket.pulse.test.MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main__pulse_target_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/base__location" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main__action_pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="#95AFC0"
        android:onClick="onTestPulseClicked"
        android:padding="12dp"
        android:text="CLICK TO PULSE"
        android:textColor="#FFFFFF"
        android:textSize="12dip"/>

</com.jackpocket.pulse.layouts.PulsingLinearLayout>
